<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/layout_main_relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_1116601" >

        <RelativeLayout
            android:id="@+id/layout_main_relativeLayout_top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/main_of_navigation_bg" >

            <TextView
                android:id="@+id/layout_main_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="BN理财助手"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_main_relativeLayout_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/yh_main_of_navigation_bg" >

            <Button
                android:id="@+id/layout_main_bn_exit"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_selector_main_exit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/layout_main_bn_stock"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignBaseline="@+id/layout_main_bn_notepad"
                android:layout_alignBottom="@+id/layout_main_bn_notepad"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/layout_main_bn_account"
                android:background="@drawable/feed_iko_overview" />

            <Button
                android:id="@+id/layout_main_bn_calculator"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignRight="@+id/layout_main_bn_account"
                android:layout_below="@+id/layout_main_bn_konwledges"
                android:background="@drawable/passcode_ikona" />

            <Button
                android:id="@+id/layout_main_bn_law"
                style="@drawable/button_selector_law"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_above="@+id/layout_main_bn_calculator"
                android:layout_alignLeft="@+id/layout_main_bn_stock"
                android:background="@drawable/feed_iko_school" />

            <Button
                android:id="@+id/layout_main_bn_konwledges"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignLeft="@+id/layout_main_bn_notepad"
                android:layout_below="@+id/layout_main_bn_notepad"
                android:layout_marginTop="33dp"
                android:background="@drawable/overview_graf_otaznik" />

            <Button
                android:id="@+id/layout_main_bn_notepad"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/layout_main_bn_account"
                android:layout_marginRight="31dp"
                android:layout_toLeftOf="@+id/layout_main_bn_account"
                android:background="@drawable/ccr_deduct_welcome_icon1" />

            <Button
                android:id="@+id/layout_main_bn_account"
                style="@drawable/button_selector_save_money"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/feed_iko_money" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>