<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gravy" >

    <LinearLayout
        android:id="@+id/pay_main_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/accountBg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/pay_Layout1"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/pay_layout1_1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/money_lay"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pay_Text_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/accountBg"
                        android:gravity="center"
                        android:text="金额:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/money_et"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/accountBg"
                        android:gravity="right"
                        android:hint="0.00"
                        android:numeric="decimal"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_lay"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pay_Text_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/accountBg"
                        android:editable="true"
                        android:gravity="center"
                        android:text="类别:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/paycategory_sp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/accountBg"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_layout2"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:background="@color/accountBg"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/pay_layout2_1"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/pay_Text_zhanghu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/gravy"
                    android:gravity="center"
                    android:text="账户:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/payzhanghu_sp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/gravy"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_layout2_2"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/pay_Text_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/gravy"
                    android:gravity="center"
                    android:text="日期:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/gravy"
                    android:gravity="right"
                    android:text="点击选择日期"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_layout2_3"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/pay_Text_project"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/gravy"
                    android:gravity="center"
                    android:text="项目:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/payproject_sp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/gravy"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_layout2_4"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pay_Text_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/gravy"
                    android:gravity="center"
                    android:text="成员:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/paymember_sp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/gravy"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_layout_ps"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@color/accountBg"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/pay_et_ps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gravy"
                android:gravity="left"
                android:hint="添加备注。"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_pay_check"
                android:layout_width="125.0dip"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30.0dip"
                android:background="@color/accountCk"
                android:text="@string/check"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_pay_save"
                android:layout_width="125.0dip"
                android:layout_height="45dip"
                android:layout_marginLeft="45.0dip"
                android:background="@color/accountSv"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>